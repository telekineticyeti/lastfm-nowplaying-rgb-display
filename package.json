{
  "name": "lastfm-nowplaying-rgbdisplay",
  "version": "0.0.1",
  "description": "LastFM Now Playing album art for Taschen Flaschen RGB Matrix display",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "readme.md"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "start": "nodemon -r dotenv/config --files src/index.ts --env-file ./.env",
    "deploy": "npm run build && node ./dist"
  },
  "author": "https://github.com/telekineticyeti/lastfm-nowplaying-rgbdisplay",
  "license": "ISC",
  "dependencies": {
    "flaschen-taschen-node": "github:telekineticyeti/flaschen-taschen-node",
    "jimp": "^0.16.2",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "dotenv": "^16.0.3",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  }
}